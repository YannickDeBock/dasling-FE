extends layout

block content
  include navbar

  div.container
    div.content

    br
    br
    br
    ul#messages
      - each message in messages    
        li #{message}

    form#device-add.form-horizontal(action='/devices/edit/',method='post',enctype='multipart/form-data')
      fieldset
        legend Enter your new device's details below
        div.control-group
          label.control-label Organization ID
          div.controls
            input(id='organization_id',type='text',name='organization_id')
        div.control-group
          label.control-label Device's Manufacturer ID
          div.controls
            input(id='device_manufacturer_identification',type='text',name='device_manufacturer_identification')
        div.control-group
          label.control-label Description
          div.controls
            input(id='description',type='text',name='description')
        div.control-group
          label.control-label Status
          div.controls
            input(id='status_id',type='text',name='status_id')
        div.control-group
          div.controls
            input.control-label.btn(type='submit').submit Submit

  div.footer
